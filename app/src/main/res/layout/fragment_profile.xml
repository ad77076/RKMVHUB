<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileFragment"
    android:background="@drawable/gradient1"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.01"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.09"
        android:orientation="horizontal">

        <TextView
            android:layout_marginLeft="5sp"
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="@font/google"
            android:gravity="left"
            android:text=" Profile "
            android:textColor="#7e57c2"
            android:textSize="35sp" />

        <ImageView
            android:paddingTop="15sp"
            android:paddingBottom="28sp"
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="0.2"/>


    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_weight="0.01"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_weight="0.3">

        <ProgressBar
            android:id="@+id/image_load"
            android:paddingTop="70sp"
            android:layout_width="match_parent"
            android:layout_height="150sp"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/image_profile"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_weight="0"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_weight="0.05"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:gravity="right"
            android:textColor="#7f36cb"
            android:textSize="30sp" />

        <ImageView
            android:id="@+id/change_dp"
            android:src="@drawable/profilepictureicon"
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_weight="0.03"/>

    <LinearLayout
        android:layout_marginLeft="10sp"
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_weight="0.05"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="0.1"
            android:paddingLeft="5sp"
            android:paddingRight="5sp"
            android:paddingTop="5sp"
            android:paddingBottom="15sp"
            android:src="@drawable/usericon" />
    <TextView
        android:textIsSelectable="true"
        android:layout_marginLeft="0sp"
        android:textSize="20sp"
        android:id="@+id/name_profile"
        android:text="Name"
        android:gravity="left"
        android:fontFamily="@font/google"
        android:textColor="#e0e0e0"
        android:layout_width="0sp"
        android:layout_height="match_parent"
        android:layout_weight="1"/>
    </LinearLayout>

    <LinearLayout
        android:layout_marginLeft="10sp"
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_weight="0.05"
        android:orientation="horizontal">
        <ImageView
            android:paddingLeft="5sp"
            android:paddingRight="5sp"
            android:paddingTop="5sp"
            android:paddingBottom="15sp"
            android:src="@drawable/numbericon"
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="0.1"/>

        <TextView
            android:id="@+id/number_profile"
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_marginLeft="0sp"
            android:layout_weight="1"
            android:fontFamily="@font/google"
            android:gravity="left"
            android:text="Number"
            android:textColor="#e0e0e0"
            android:textIsSelectable="true"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginLeft="10sp"
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_weight="0.05"
        android:orientation="horizontal">
        <ImageView
            android:paddingLeft="5sp"
            android:paddingRight="5sp"
            android:paddingTop="5sp"
            android:paddingBottom="15sp"            android:src="@drawable/emailicon"
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="0.1"/>
    <TextView
        android:textIsSelectable="true"
        android:layout_marginLeft="0sp"
        android:id="@+id/email_profile"
        android:text="Email"
        android:textSize="20sp"
        android:gravity="left"
        android:fontFamily="@font/google"
        android:textColor="#e0e0e0"
        android:layout_width="0sp"
        android:layout_height="match_parent"
        android:layout_weight="1"/>
    </LinearLayout>

    <LinearLayout
        android:layout_marginLeft="10sp"
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_weight="0.05"
        android:orientation="horizontal">
        <ImageView
            android:paddingLeft="5sp"
            android:paddingRight="5sp"
            android:paddingTop="5sp"
            android:paddingBottom="15sp"            android:src="@drawable/departmenticon"
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="0.1"/>
    <TextView
        android:textIsSelectable="true"
        android:layout_marginLeft="0sp"
        android:id="@+id/dept_profile"
        android:text="Department"
        android:textSize="20sp"
        android:gravity="left"
        android:fontFamily="@font/google"
        android:textColor="#e0e0e0"
        android:layout_width="0sp"
        android:layout_height="match_parent"
        android:layout_weight="1"/>
    </LinearLayout>

    <LinearLayout
        android:layout_marginLeft="10sp"
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_weight="0.05"
        android:orientation="horizontal">
        <ImageView
            android:paddingLeft="2sp"
            android:paddingRight="2sp"
            android:paddingTop="2sp"
            android:paddingBottom="15sp"            android:src="@drawable/roleicon"
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="0.1"/>
    <TextView
        android:textIsSelectable="true"
        android:layout_marginLeft="0sp"
        android:id="@+id/role_profile"
        android:text="Role"
        android:textSize="20sp"
        android:gravity="left"
        android:fontFamily="@font/google"
        android:textColor="#e0e0e0"
        android:layout_width="0sp"
        android:layout_height="match_parent"
        android:layout_weight="1"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_weight="0.02"/>

    <TextView
        android:layout_marginLeft="30sp"
        android:layout_marginRight="200sp"
        android:id="@+id/edit_info"
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_weight="0.04"
        android:fontFamily="@font/google"
        android:gravity="left"
        android:text="Edit details"
        android:textColor="#bdbdbd"
        android:textSize="17sp"
        android:textStyle="bold" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_weight="0.04">
        <ProgressBar
            android:id="@+id/getting_info"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="invisible"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_weight="0" />
    <Button
        android:id="@+id/add_status"
        android:layout_marginLeft="120sp"
        android:layout_marginRight="120sp"
        android:text="STATUS"
        android:textSize="15sp"
        android:textColor="#fafafa"
        android:fontFamily="@font/google"
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_weight="0.07"
        android:background="@drawable/buttonview"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_weight="0" />

    <LinearLayout
        android:gravity="center"
        android:layout_marginLeft="120sp"
        android:layout_marginRight="120sp"
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_weight="0.1"
        android:orientation="horizontal">

        <ImageView
            android:paddingLeft="30sp"
            android:paddingTop="25sp"
            android:paddingBottom="25sp"
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/logouticon" />

        <TextView
        android:paddingRight="30sp"
        android:id="@+id/logout"
        android:gravity="center"
        android:text="Logout"
        android:textSize="17sp"
        android:textStyle="bold"
        android:fontFamily="@font/google"
        android:textColor="#bdbdbd"
        android:layout_width="0sp"
        android:layout_height="match_parent"
        android:layout_weight="1.7"/>
    </LinearLayout>
</LinearLayout>