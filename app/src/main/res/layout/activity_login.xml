<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity"
    android:orientation="vertical"
    android:background="@drawable/gradient1">

    <ProgressBar
        android:visibility="invisible"
        android:id="@+id/login_wait"
        android:paddingTop="20sp"
        android:paddingBottom="20sp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1"/>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="0sp"
    android:layout_weight="0.7"
    android:orientation="vertical"
    android:layout_marginLeft="10sp"
    android:layout_marginRight="10sp">
    <TextView
        android:padding="20sp"
        android:text="Login"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fontFamily="@font/ubuntu"
        android:textAlignment="center"
        android:textColor="#7f36cb"
        android:textSize="70sp"
        android:layout_weight="0.09"/>

    <EditText
        android:id="@+id/Number"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="30sp"
        android:layout_marginRight="30sp"
        android:layout_weight="0.050"
        android:background="@drawable/round_edit_text"
        android:fontFamily="@font/ubuntu"
        android:hint="Mobile number"
        android:inputType="number"
        android:padding="20sp"
        android:textColor="#fafafa"
        android:textColorHint="#e0e0e0" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.02"/>

    <EditText
        android:id="@+id/Password"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="30sp"
        android:layout_marginRight="30sp"
        android:layout_weight="0.050"
        android:background="@drawable/round_edit_text"
        android:fontFamily="@font/ubuntu"
        android:hint="Password"
        android:inputType="textPassword"
        android:padding="20sp"
        android:textColor="#fafafa"
        android:textColorHint="#e0e0e0" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.005"/>
    <TextView
        android:layout_marginRight="180sp"
        android:textColor="#7f36cb"
        android:textSize="16sp"
        android:fontFamily="@font/ubuntu"
        android:id="@+id/ShowHide"
        android:onClick="passShowHide"
        android:layout_marginLeft="50sp"
        android:text="Show Password."
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.03"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.006"/>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="0sp"
    android:layout_weight="0.050">

    <Button
        android:id="@+id/login"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="30sp"
        android:layout_marginRight="30sp"
        android:background="@drawable/buttonview"
        android:fontFamily="@font/ubuntu"
        android:text="LOGIN"
        android:textColor="#fafafa"
        android:textStyle="bold" />
</RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.02"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="100sp"
        android:layout_marginRight="100sp"
        android:layout_weight="0.03"
        android:fontFamily="@font/ubuntu"
        android:onClick="forgotPassword"
        android:text="Forgot Password"
        android:textAlignment="center"
        android:textColor="#fafafa"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/newAcc"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="100sp"
        android:layout_marginRight="100sp"
        android:layout_weight="0.05"
        android:fontFamily="@font/ubuntu"
        android:gravity="center"
        android:onClick="newAcc"
        android:text="Create new account "
        android:textColor="#fafafa"
        android:textSize="16sp" />
</LinearLayout>

    <TextView
        android:textColor="#bdbdbd"
        android:textSize="20sp"
        android:paddingLeft="10sp"
        android:paddingBottom="10sp"
        android:gravity="bottom"
        android:fontFamily="@font/ubuntu"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1"/>

</LinearLayout>