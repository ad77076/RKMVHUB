<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="@drawable/gradient1">

    <FrameLayout
        android:id="@+id/frag"
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_weight="11"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_weight="0.75"
        android:orientation="horizontal">
    <LinearLayout
        android:background="@drawable/background_navigation"
        android:layout_width="0sp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="0.05"
            android:orientation="vertical">
        <ImageView
            android:src="@drawable/email2"
            android:layout_marginTop="5sp"
            android:id="@+id/e"
            android:onClick="emailCalled"
            android:layout_width="match_parent"
            android:layout_height="0sp"
            android:layout_weight="1"/>
            <TextView
                android:id="@+id/mail_text"
                android:fontFamily="@font/google"
                android:text="Mails"
                android:textColor="#fafafa"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="0sp"
                android:layout_weight="0.7"
                android:layout_marginBottom="5sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="0.05"
            android:orientation="vertical">
        <ImageView
            android:src="@drawable/status1"
            android:layout_marginTop="5sp"
            android:id="@+id/s"
            android:onClick="statusCalled"
            android:layout_width="match_parent"
            android:layout_height="0sp"
            android:layout_weight="1"/>
            <TextView
                android:id="@+id/status_text"
                android:fontFamily="@font/google"
                android:text="Status"
                android:textColor="#fafafa"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="0sp"
                android:layout_weight="0.7"
                android:layout_marginBottom="5sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="0.05"
            android:orientation="vertical">
        <ImageView
            android:src="@drawable/chat1"
            android:layout_marginTop="5sp"
            android:id="@+id/c"
            android:onClick="chatCalled"
            android:layout_width="match_parent"
            android:layout_height="0sp"
            android:layout_weight="1"/>
            <TextView
                android:id="@+id/contacts_text"
                android:fontFamily="@font/google"
                android:text="Contacts"
                android:textColor="#fafafa"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="0sp"
                android:layout_weight="0.7"
                android:layout_marginBottom="5sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="0.05"
            android:orientation="vertical">
        <ImageView
            android:id="@+id/p"
            android:layout_width="match_parent"
            android:layout_height="0sp"
            android:layout_marginTop="5sp"
            android:layout_weight="1"
            android:onClick="profileCalled"
            android:src="@drawable/profile1" />

            <TextView
                android:id="@+id/profile_text"
                android:layout_width="match_parent"
                android:layout_height="0sp"
                android:layout_marginBottom="5sp"
                android:layout_weight="0.7"
                android:fontFamily="@font/google"
                android:gravity="center"
                android:text="Profile"
                android:textColor="#fafafa" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>

</LinearLayout>