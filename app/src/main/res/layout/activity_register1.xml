<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Register1"
    android:orientation="vertical"
    android:background="@drawable/gradient1">


    <View
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_weight="0.03"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.05"
        android:orientation="horizontal">

        <ImageView
            android:onClick="b"
            android:id="@+id/b1"
            android:layout_width="0sp"
            android:layout_weight="0.2"
            android:src="@drawable/back"
            android:padding="15sp"
            android:layout_height="match_parent"/>
        <TextView
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:text=" Register "
            android:fontFamily="@font/ubuntu"
            android:textAlignment="center"
            android:paddingRight="40sp"
            android:textColor="#7f36cb"
            android:textSize="45sp"
            android:layout_weight="1"/>

    </LinearLayout>

    <TextView
        android:textColor="#fafafa"
        android:gravity="bottom"
        android:fontFamily="@font/ubuntu"
        android:layout_marginLeft="60sp"
        android:text="Mobile Number*:"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.02"/>

    <EditText
        android:textColor="#fafafa"
        android:textColorHint="#bdbdbd"
        android:id="@+id/Number"
        android:inputType="number"
        android:fontFamily="@font/ubuntu"
        android:padding="20sp"
        android:layout_marginLeft="40sp"
        android:layout_marginRight="40sp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/round_edit_text"
        android:layout_weight="0.050"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.01"/>
    <TextView
        android:textColor="#fafafa"
        android:gravity="bottom"
        android:fontFamily="@font/ubuntu"
        android:layout_marginLeft="60sp"
        android:text="Full Name*:"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.02"/>

    <EditText
        android:id="@+id/fullname"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="40sp"
        android:layout_marginRight="40sp"
        android:layout_weight="0.050"
        android:background="@drawable/round_edit_text"
        android:fontFamily="@font/ubuntu"
        android:inputType="text"
        android:padding="20sp"
        android:textColor="#fafafa"
        android:textColorHint="#bdbdbd" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.01"/>

    <TextView
        android:textColor="#fafafa"
        android:gravity="bottom"
        android:fontFamily="@font/ubuntu"
        android:layout_marginLeft="60sp"
        android:text="Password*:"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.02"/>

    <EditText
        android:id="@+id/password1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="40sp"
        android:layout_marginRight="40sp"
        android:layout_weight="0.050"
        android:background="@drawable/round_edit_text"
        android:fontFamily="@font/ubuntu"
        android:gravity="bottom"
        android:inputType="textPassword"
        android:padding="20sp"
        android:textColor="#fafafa" />

    <TextView
        android:textColor="#7f36cb"
        android:gravity="right"
        android:textSize="16sp"
        android:fontFamily="@font/ubuntu"
        android:id="@+id/ShowHide1"
        android:onClick="passSH1"
        android:layout_marginRight="50sp"
        android:layout_marginLeft="120sp"
        android:text="Show Password."
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.02"/>

    <TextView
        android:textColor="#fafafa"
        android:gravity="bottom"
        android:fontFamily="@font/ubuntu"
        android:layout_marginLeft="60sp"
        android:text="Re-enter Password*:"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.015"/>

    <EditText
        android:id="@+id/password2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="40sp"
        android:layout_marginRight="40sp"
        android:layout_weight="0.050"
        android:background="@drawable/round_edit_text"
        android:fontFamily="@font/ubuntu"
        android:gravity="bottom"
        android:inputType="textPassword"
        android:padding="20sp"
        android:textColor="#fafafa" />

    <TextView
        android:layout_marginLeft="120sp"
        android:textColor="#7f36cb"
        android:id="@+id/ShowHide2"
        android:gravity="right"
        android:textSize="16sp"
        android:fontFamily="@font/ubuntu"
        android:onClick="passSH2"
        android:layout_marginRight="50sp"
        android:text="Show Password."
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.02"/>

    <TextView
        android:textColor="#fafafa"
        android:gravity="bottom"
        android:fontFamily="@font/ubuntu"
        android:layout_marginLeft="60sp"
        android:text="Special Code*:"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.015"/>

    <EditText
        android:id="@+id/special"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="40sp"
        android:layout_marginRight="170sp"
        android:layout_weight="0.050"
        android:background="@drawable/round_edit_text"
        android:fontFamily="@font/ubuntu"
        android:gravity="bottom"
        android:inputType="numberPassword"
        android:padding="20sp"
        android:textColor="#fafafa" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_weight="0.01"/>

    <Button
        android:onClick="nextPage"
        android:text="NEXT"
        android:textSize="15sp"
        android:fontFamily="@font/ubuntu"
        android:textColor="#fafafa"
        android:textStyle="bold"
        android:layout_marginLeft="90sp"
        android:layout_marginRight="90sp"
        android:background="@drawable/buttonview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.049"/>

    <TextView
        android:textColor="#bdbdbd"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.03"
        android:fontFamily="@font/ubuntu"
        android:gravity="bottom"
        android:paddingLeft="10sp"
        android:paddingBottom="10sp"
        android:textSize="20sp" />

</LinearLayout>