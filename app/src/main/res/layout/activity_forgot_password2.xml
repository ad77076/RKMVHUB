<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ForgotPassword2"
    android:orientation="vertical"
    android:background="@drawable/gradient1">

    <View
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_weight="0.13"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.25"
        android:orientation="horizontal">

        <ImageView
            android:onClick="b2"
            android:id="@+id/b2"
            android:layout_width="0sp"
            android:layout_weight="0.1"
            android:paddingLeft="5sp"
            android:src="@drawable/back"
            android:layout_height="match_parent"/>
        <TextView
            android:gravity="center"
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:text=" Forgot Password"
            android:fontFamily="@font/ubuntu"
            android:textAlignment="center"
            android:paddingRight="30sp"
            android:textColor="#7f36cb"
            android:textSize="40sp"
            android:layout_weight="1"/>

    </LinearLayout>


    <TextView
        android:textColor="#2196f3"
        android:fontFamily="@font/ubuntu"
        android:gravity="center"
        android:layout_marginTop="20sp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.18"/>

    <TextView
        android:gravity="center"
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:paddingLeft="30sp"
        android:paddingRight="30sp"
        android:text="Please wait..."
        android:fontFamily="@font/ubuntu"
        android:textAlignment="center"
        android:textColor="#fafafa"
        android:textSize="20sp"
        android:layout_weight="0.35"/>

    <Button
        android:onClick="getOTP"
        android:id="@+id/requestOTP"
        android:text="GET otp"
        android:fontFamily="@font/ubuntu"
        android:textColor="#fafafa"
        android:textStyle="bold"
        android:layout_marginLeft="120sp"
        android:layout_marginRight="120sp"
        android:layout_marginBottom="20sp"
        android:background="@drawable/buttonview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.2"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_weight="0.29">
        <ProgressBar
            android:id="@+id/number_check"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="invisible"/>
    <TextView
        android:id="@+id/some_text"
        android:textColor="#e0e0e0"
        android:layout_marginLeft="50sp"
        android:layout_marginRight="50sp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    </RelativeLayout>

    <EditText
        android:textColor="#fafafa"
        android:textColorHint="#e0e0e0"
        android:id="@+id/OTP_number"
        android:hint="OTP Number here..."
        android:inputType="number"
        android:fontFamily="@font/ubuntu"
        android:padding="20sp"
        android:layout_marginLeft="30sp"
        android:layout_marginRight="30sp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/round_edit_text"
        android:layout_weight="0.26"/>

    <TextView
        android:id="@+id/textcheck"
        android:textColor="#bdbdbd"
        android:layout_marginLeft="50sp"
        android:layout_marginRight="50sp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.10"/>

    <Button
        android:onClick="next"
        android:id="@+id/nxt"
        android:text="NEXT"
        android:fontFamily="@font/ubuntu"
        android:textColor="#fafafa"
        android:textStyle="bold"
        android:layout_marginLeft="90sp"
        android:layout_marginRight="90sp"
        android:background="@drawable/buttonview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.2"/>

    <TextView
        android:textColor="#2196f3"
        android:fontFamily="@font/ubuntu"
        android:gravity="center"
        android:layout_marginTop="20sp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1"/>

    <TextView
        android:textColor="#bdbdbd"
        android:textSize="20sp"
        android:paddingLeft="10sp"
        android:paddingBottom="10sp"
        android:gravity="bottom"
        android:fontFamily="@font/ubuntu"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8"/>


</LinearLayout>