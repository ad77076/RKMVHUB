<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NewPassword"
    android:orientation="vertical"
    android:background="@drawable/gradient1">

    <View
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_weight="0.13"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.25"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/b3"
            android:layout_width="0sp"
            android:layout_weight="0.1"
            android:paddingLeft="4sp"
            android:layout_height="match_parent"/>

        <TextView
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="@font/ubuntu"
            android:gravity="center"
            android:paddingRight="30sp"
            android:text=" Password Recovery "
            android:textAlignment="center"
            android:textColor="#7f36cb"
            android:textSize="35sp" />

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.25"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="Enter new Password"
        android:fontFamily="@font/ubuntu"
        android:textAlignment="center"
        android:textColor="#fafafa"
        android:textSize="30sp"
        android:layout_weight="0.3"/>

    <EditText
        android:textColor="#fafafa"
        android:id="@+id/Pass1"
        android:hint="New password here..."
        android:textColorHint="#e0e0e0"
        android:inputType="textPassword"
        android:fontFamily="@font/ubuntu"
        android:padding="20sp"
        android:layout_marginLeft="30sp"
        android:layout_marginRight="30sp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/round_edit_text"
        android:layout_weight="0.26"/>

    <TextView
        android:textColor="#7f36cb"
        android:id="@+id/sh1"
        android:onClick="passShowHide1"
        android:layout_marginLeft="40sp"
        android:text="Show Password."
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.06"/>

    <EditText
        android:id="@+id/Pass2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="30sp"
        android:layout_marginRight="30sp"
        android:layout_weight="0.26"
        android:background="@drawable/round_edit_text"
        android:fontFamily="@font/ubuntu"
        android:hint="Re-enter new password here..."
        android:inputType="textPassword"
        android:padding="20sp"
        android:textColor="#fafafa"
        android:textColorHint="#e0e0e0" />

    <TextView
        android:textColor="#7f36cb"
        android:id="@+id/sh2"
        android:onClick="passShowHide2"
        android:text="Show Password."
        android:layout_marginLeft="40sp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1"/>

    <Button
        android:onClick="doneNewPassword"
        android:id="@+id/done"
        android:text="DONE"
        android:fontFamily="@font/ubuntu"
        android:textColor="#fafafa"
        android:textStyle="bold"
        android:layout_marginLeft="100sp"
        android:layout_marginRight="100sp"
        android:background="@drawable/buttonview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.2"/>

    <TextView
        android:textColor="#bdbdbd"
        android:textSize="20sp"
        android:paddingLeft="10sp"
        android:paddingBottom="10sp"
        android:gravity="bottom"
        android:fontFamily="@font/ubuntu"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8"/>

</LinearLayout>