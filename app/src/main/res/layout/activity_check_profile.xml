<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CheckProfile"
    android:orientation="vertical"
    android:background="@drawable/gradient1">

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.09"
        android:orientation="horizontal">

        <ImageView
            android:onClick="backed"
            android:id="@+id/b1"
            android:layout_width="0sp"
            android:layout_weight="0.1"
            android:paddingLeft="4sp"
            android:src="@drawable/back"
            android:layout_height="match_parent"/>

        <TextView
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="@font/google"
            android:gravity="center"
            android:paddingRight="30sp"
            android:text="Profile"
            android:textAlignment="center"
            android:textColor="#7f36cb"
            android:textSize="40sp" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_weight="0.02"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_weight="0.01"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_weight="0.3">

        <ProgressBar
            android:id="@+id/image_load"
            android:paddingTop="70sp"
            android:layout_width="match_parent"
            android:layout_height="150sp"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/image_profile"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_weight="0.01"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_weight="0.07"/>
    <LinearLayout
        android:layout_marginLeft="10sp"
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_weight="0.05"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="0.1"
            android:paddingLeft="5sp"
            android:paddingRight="5sp"
            android:paddingTop="5sp"
            android:paddingBottom="15sp"
            android:src="@drawable/usericon" />
        <TextView
            android:textIsSelectable="true"
            android:layout_marginLeft="0sp"
            android:textSize="20sp"
            android:id="@+id/name_profile"
            android:text="Name"
            android:gravity="left"
            android:fontFamily="@font/google"
            android:textColor="#fafafa"
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
    </LinearLayout>

    <LinearLayout
        android:layout_marginLeft="10sp"
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_weight="0.05"
        android:orientation="horizontal">
        <ImageView
            android:paddingLeft="5sp"
            android:paddingRight="5sp"
            android:paddingTop="5sp"
            android:paddingBottom="15sp"
            android:src="@drawable/numbericon"
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="0.1"/>
        <TextView
            android:textIsSelectable="true"
            android:layout_marginLeft="0sp"
            android:textSize="20sp"
            android:id="@+id/number_profile"
            android:text="Number"
            android:gravity="left"
            android:fontFamily="@font/google"
            android:textColor="#fafafa"
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginLeft="10sp"
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_weight="0.05"
        android:orientation="horizontal">
        <ImageView
            android:paddingLeft="5sp"
            android:paddingRight="5sp"
            android:paddingTop="5sp"
            android:paddingBottom="15sp"            android:src="@drawable/emailicon"
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="0.1"/>
        <TextView
            android:textIsSelectable="true"
            android:layout_marginLeft="0sp"
            android:id="@+id/email_profile"
            android:text="Email"
            android:textSize="20sp"
            android:gravity="left"
            android:fontFamily="@font/google"
            android:textColor="#fafafa"
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginLeft="10sp"
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_weight="0.05"
        android:orientation="horizontal">
        <ImageView
            android:paddingLeft="5sp"
            android:paddingRight="5sp"
            android:paddingTop="5sp"
            android:paddingBottom="15sp"            android:src="@drawable/departmenticon"
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="0.1"/>
        <TextView
            android:textIsSelectable="true"
            android:layout_marginLeft="0sp"
            android:id="@+id/dept_profile"
            android:text="Department"
            android:textSize="20sp"
            android:gravity="left"
            android:fontFamily="@font/google"
            android:textColor="#fafafa"
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginLeft="10sp"
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_weight="0.05"
        android:orientation="horizontal">
        <ImageView
            android:paddingLeft="2sp"
            android:paddingRight="2sp"
            android:paddingTop="2sp"
            android:paddingBottom="15sp"            android:src="@drawable/roleicon"
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="0.1"/>
        <TextView
            android:textIsSelectable="true"
            android:layout_marginLeft="0sp"
            android:id="@+id/role_profile"
            android:text="Role"
            android:textSize="20sp"
            android:gravity="left"
            android:fontFamily="@font/google"
            android:textColor="#fafafa"
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_weight="0.02"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.2"
        android:fontFamily="@font/ubuntu"
        android:gravity="bottom"
        android:paddingLeft="10sp"
        android:paddingBottom="10sp"
        android:textColor="#bdbdbd"
        android:textSize="20sp" />
</LinearLayout>